@model IEnumerable<TeamHolidayPlanner.Domain.EmploymentGrade>

@{
    ViewData["Title"] = "Index";
}

<h2>Employment Grades</h2>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnualLeaveEntitlement)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnnualLeaveEntitlement)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmploymentGradeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmploymentGradeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmploymentGradeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
